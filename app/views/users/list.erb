<h1>My Applications</h1>
<div class="search-box">
	<form method="POST" action="search" class="form-search">
		<%= csrf_token_field %>
		<input type="text" name="q" id="text-field"/>
		<input type="submit" value="search" id="search-button" class="btn btn-primary"/>
	</form>
</div>

<table class="table table-bordered">
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>
	<% @offers.each do | offer| %>

	<tr>
		<td>
			<%= offer.title %>
		</td>
		<td>
			<%= offer.location %>
		</td>
		<td>
			<%= offer.description %>
		</td>		
		<td>

			<a id="applybtn" class="btn btn-large btn-primary" href="<%= url(:job_offers, :apply, :offer_id => offer.id) %>" >Apply</a>
		</td>		
	</tr>

  <% end %>

</table>